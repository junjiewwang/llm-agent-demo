# LLM API Configuration
# 支持 OpenAI 兼容协议的 API（OpenAI / DeepSeek / 通义千问等）
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TEMPERATURE=0.7
# Plan-Execute 步骤执行的独立 temperature（低温 → 工具选择更确定性，默认 0.3）
# AGENT_STEP_TEMPERATURE=0.3
AGENT_MAX_TOKENS=4096

# Search Configuration
# 搜索后端选择: auto（默认）| duckduckgo | tavily
# auto 模式：有 Tavily Key 用 Tavily，否则用 DuckDuckGo（免费）
SEARCH_BACKEND=auto
# Tavily API Key（可选，https://tavily.com 注册获取，免费 1000 次/月）
# SEARCH_TAVILY_API_KEY=tvly-your-api-key-here

# Filesystem Configuration
# 默认根目录（读写，相对路径的基准，默认当前工作目录，留空即可）
# FILESYSTEM_SANDBOX_DIR=
# 额外允许访问的目录（逗号分隔，默认只读）
# FILESYSTEM_ALLOWED_DIRS=~/Documents,~/Downloads,/tmp
# 额外允许写入的目录（逗号分隔，须在 ALLOWED_DIRS 中）
# FILESYSTEM_WRITABLE_DIRS=/tmp
# 排除的路径模式（逗号分隔）
# FILESYSTEM_EXCLUDE=.env,.git,__pycache__,.agent_data,.venv,venv,node_modules,.idea,.vscode
# 单文件读取大小限制（字节），默认 1MB
# FILESYSTEM_MAX_FILE_SIZE=1048576
# 搜索最大深度，默认 5
# FILESYSTEM_MAX_DEPTH=5
# 搜索最大结果数，默认 50
# FILESYSTEM_MAX_RESULTS=50

# DevOps Tools Configuration
# kubectl 和 docker 工具默认关闭，需显式启用
# 写操作和危险操作通过 AGENT_TOOL_CONFIRM_MODE 确认机制保障安全
# DEVOPS_KUBECTL_ENABLED=true
# 限制允许访问的 namespace（逗号分隔，留空=全部允许）
# DEVOPS_KUBECTL_ALLOWED_NAMESPACES=default,kube-system
# kubectl 命令超时（秒，默认 30）
# DEVOPS_KUBECTL_TIMEOUT=30
# DEVOPS_DOCKER_ENABLED=true
# docker 命令超时（秒，默认 30）
# DEVOPS_DOCKER_TIMEOUT=30
# DEVOPS_CURL_ENABLED=true
# curl 请求超时（秒，默认 30）
# DEVOPS_CURL_TIMEOUT=30
# Host 白名单（逗号分隔，留空=不限制，可按需配置收紧访问范围）
# DEVOPS_CURL_ALLOWED_HOSTS=
# 最大响应大小（字节，默认 1MB）
# DEVOPS_CURL_MAX_RESPONSE_BYTES=1048576

# 相关性阈值（cosine distance，越小越严格，默认 0.7）
# AGENT_KB_RELEVANCE_THRESHOLD=0.7
# AGENT_MEMORY_RELEVANCE_THRESHOLD=0.7

# 工具执行确认模式: never（从不确认） | smart（智能判断，默认） | always（始终确认）
# AGENT_TOOL_CONFIRM_MODE=smart

# OpenTelemetry Configuration
# OTEL_ENABLED=true
# OTEL_SERVICE_NAME=llm-react-agent
# 导出协议: grpc（默认，端口 4317）| http（端口 4318）
# OTEL_EXPORTER_PROTOCOL=grpc
# OTEL_EXPORTER_ENDPOINT=http://localhost:4317
# 鉴权 Header（格式: key=value，多个逗号分隔，留空=无鉴权）
# 示例: OTEL_EXPORTER_HEADERS=Authorization=Bearer your-token
# 示例: OTEL_EXPORTER_HEADERS=x-api-key=abc123,x-tenant-id=tenant1
# OTEL_EXPORTER_HEADERS=
# 控制台输出（开发调试用，无需 collector）
# OTEL_CONSOLE_EXPORT=true
# 记录 LLM 输入/输出内容到 Span（默认关闭，生产安全）
# OTEL_LOG_CONTENT=false